<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.canvas.Canvas?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.orbwarrior.PrimaryController">
    <MenuBar>
        <Menu text="View">
            <MenuItem text="Delaunay Triangulation" onAction="#showDelaunayView"/>
            <MenuItem text="Path Planning (Not Implemented)" onAction="#showPathPlanningView"/>
        </Menu>
    </MenuBar>
    
    <BorderPane fx:id="mainContent" VBox.vgrow="ALWAYS">
       <center>
          <Pane fx:id="canvasContainer" style="-fx-background-color: #f0f0f0;">
             <children>
                <Canvas fx:id="drawingCanvas" width="800.0" height="600.0" onMouseClicked="#handleCanvasClick" />
             </children>
          </Pane>
       </center>
       <bottom>
          <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <items>
                <Button text="Import Map (JSON)" onAction="#handleImport" />
                <Button text="Clear" onAction="#handleClear" />
                <CheckBox fx:id="liveModeCheckbox" text="Live Triangulation" />
                <Button text="Triangulate" onAction="#handleTriangulate" />
            </items>
          </ToolBar>
       </bottom>
    </BorderPane>
</VBox>